#!/usr/bin/make -f

REV=$(shell dpkg-parsechangelog | sed -rne 's,^Version: .*[+~]svn([0-9]+).*,\1,p')
VER=$(shell dpkg-parsechangelog | sed -rne 's,^Version: ([^-]+).*,\1,p')

get-orig-source:
	rm -rf dttsp-sdr-core-$(VER).orig
	svn -q export -r $(REV) https://www.cgran.org/cgran/projects/dttsp/trunk/sdr-core/base \
		dttsp-sdr-core-$(VER).orig
	GZIP=--best tar -cz --owner root --group root --mode a+rX \
		-f dttsp-sdr-core_$(VER).orig.tar.gz \
		dttsp-sdr-core-$(VER).orig
	rm -r dttsp-sdr-core-$(VER).orig

%:
	dh $@
